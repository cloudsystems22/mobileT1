<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avanade.mobilet1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileT1">
        <activity
            android:name=".views.CreateMovieActivity"
            android:exported="false" />
        <activity
            android:name=".views.fragments.ProfileFragment"
            android:exported="false" />
        <activity
            android:name=".views.fragments.MyMoviesFragment"
            android:exported="false" />
        <activity
            android:name=".views.fragments.HomeFragment"
            android:exported="false" />
        <activity
            android:name=".views.fragments.AddMovieFragment"
            android:exported="false" />
        <activity
            android:name=".views.MovieDetailActivity"
            android:exported="false" />
        <activity
            android:name=".views.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".views.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".views.HomeActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>